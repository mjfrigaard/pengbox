# box/prep/vars.R

# reset the path
options(box.path = getwd())

# use import raw module
box::use(box/prep/cols/clean)

# wrangle packages/functions
box::use(
  dplyr[...],
  stringr[str_ext = str_extract]
)

#' @export
plot_vars = function() {
  vars <- clean$clean_subset()
  mutate(vars, 
    species = str_ext(species, "([[:alpha:]]+)"),
    sex = factor(sex))
  # remove missing sex
  plot_vars <- filter(vars, !is.na(sex)) 
  return(plot_vars)
}